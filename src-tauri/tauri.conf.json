{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Inquira",
  "version": "0.5.7-alpha.5",
  "identifier": "com.inquira.desktop",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm --prefix . run build -- --outDir dist || npm --prefix frontend run build -- --outDir dist || npm --prefix ../frontend run build -- --outDir dist"
  },
  "app": {
    "windows": [
      {
        "title": "Inquira",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../backend/app/__init__.py",
      "../backend/app/main.py",
      "../backend/app/app_config.json",
      "../backend/app/agent",
      "../backend/app/api",
      "../backend/app/core",
      "../backend/app/database",
      "../backend/app/legal",
      "../backend/app/logo",
      "../backend/app/services",
      "../backend/app/tools",
      "../backend/app/v1",
      "../backend/alembic",
      "../backend/alembic.ini",
      "../backend/main.py",
      "../backend/pyproject.toml",
      "../backend/uv.lock",
      "../src-tauri/bundled-tools",
      "../inquira.toml"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
